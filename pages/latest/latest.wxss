.item {
  border-top: 1px solid #e2e2e2;  
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #778087;
}
.content .info text {
  font-size: 22rpx;
  color: #ccc;
}
.content .info .title {
  display: inline-block;
  background-color: #f5f5f5;
  color: #777;
  padding: 4rpx;
  border-radius: 6rpx;
}
.content .info .modified {
  font-weight: bold;
  color: #778087;
}
.item .replies-num {
  font-size: 26rpx;
  font-weight: 700;
  color: #fff;
  background-color: #aab0c6;
  display: inline-block;
  padding: 2rpx 14rpx;
  border-radius: 6rpx;
}